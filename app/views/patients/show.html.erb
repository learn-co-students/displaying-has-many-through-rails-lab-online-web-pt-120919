<h3><%= @patient.name %></h3>

<h3>Appointments</h3>
<% @patient.appointments.each.with_index(1) do |a, i| %>
  <p>Appointment <%= "#{i}" %></p>
    <ul>
      <li>Date: <%= a.appointment_datetime.strftime('%B %e, %Y at %H:%M') %></li>
      <li>Doctor: <%= link_to a.doctor.name, doctor_path(a.doctor) %></li>
    </ul>
<% end %>
